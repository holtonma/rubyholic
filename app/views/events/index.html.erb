<h3>Search for meetup location nearby you:</h3>
<% form_tag({:action => 'index'}, :method => 'get') do |f| %>
<div align="center">
  <span>
    <%= label_tag "search event names or notes: " %><br />
    <%= text_field_tag :q, h(params[:q]), :size => 50 %>
  </span>
  <span><%= submit_tag "Search" %></span>
</div>
<% end %>

<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Group_ID</th>
		<th>Location_ID</th>
		<th>Start date</th>
    <th>End date</th>
  </tr>

<% for event in @events %>
  <tr>
    <td><%=h event.name %></td>
    <td><%=h event.description %></td>
    <td><%=h event.group_id %></td>
		<td><%=h event.location_id %></td>
		<td><%=h event.start_date %></td>
    <td><%=h event.end_date %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New event', new_event_path %>

<div align="center"><%= will_paginate @groups %></div>
